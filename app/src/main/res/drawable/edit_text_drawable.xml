<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color of the EditText -->
    <solid android:color="#FFFFFF" />

    <!-- Border color and width -->
    <stroke
        android:color="@color/primary_text_color"
        android:width="1dp" />

    <!-- Rounded corners for the EditText -->
    <corners android:radius="8dp" />

    <!-- Padding for the text within the EditText -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>