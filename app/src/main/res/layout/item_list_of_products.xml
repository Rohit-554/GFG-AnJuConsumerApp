<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="156dp"
            app:cardCornerRadius="5dp"
            android:layout_margin="10dp"
            >
            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/rl_product_img_name"
                    android:layout_width="wrap_content"
                    android:padding="5dp"
                    android:layout_height="wrap_content"
                    >
                    <androidx.cardview.widget.CardView
                        android:layout_width="128dp"
                        android:layout_height="128dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/iv_vegetables"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/vegetables" />

                    </androidx.cardview.widget.CardView>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/ItemProductType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="1dp"
                        android:layout_alignParentBottom="true"
                        android:gravity="center"
                        android:text="@string/vegetables"
                        android:textColor="@color/primary_text_color" />

                </RelativeLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/rl_product_img_name"
                    android:text=""
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/primary_text_color"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/item_product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/rl_product_img_name"
                    android:text="pumpkin"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/primary_text_color"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/farmer_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/rl_product_img_name"
                    android:text="â‚¹40/kg"
                    android:layout_below="@id/tv_product_name"

                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/primary_text_color"
                    />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_expire"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/farmer_price"
                    android:layout_toEndOf="@id/rl_product_img_name"
                    android:text="@string/expire_date"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/primary_text_color"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_expire_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/farmer_price"
                    android:layout_toEndOf="@id/tv_expire"
                    android:text="15-04-2023"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/primary_text_color"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_add_to_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_below="@id/tv_expire"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:drawableStart="@drawable/baseline_shopping_cart_24"
                    android:drawableTint="@color/white"
                    android:text="@string/add_to_cart"
                    android:textSize="11sp"
                    android:layout_toEndOf="@id/rl_product_img_name"
                    android:background="@drawable/langbuttondesignsmall"
                    />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>


</RelativeLayout>