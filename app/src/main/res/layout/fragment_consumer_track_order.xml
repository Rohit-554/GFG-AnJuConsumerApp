<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".consumer.ui.fragments.ConsumerTrackOrderFragment">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/track_order_lottie"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:lottie_rawRes="@raw/building"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent=".5"
        app:layout_constraintVertical_bias=".2"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        />
    <TextView
        android:id="@+id/track_order_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/track_order_lottie"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="We are Building..."
        android:fontFamily="@font/lato_bold"
        android:textSize="24sp"
        android:textColor="@color/primary_text_color"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_home"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_constraintTop_toBottomOf="@id/track_order_text"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/langbuttondesign"
        android:text="Go to Home"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:fontFamily="@font/lato_bold"
        />


</androidx.constraintlayout.widget.ConstraintLayout>